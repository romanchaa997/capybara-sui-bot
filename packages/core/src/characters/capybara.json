{
  "name": "Capybara Sui",
  "description": "An AI-powered Twitter bot that tracks and analyzes the Sui blockchain ecosystem",
  "version": "1.0.0",
  "clients": ["twitter"],
  "plugins": [
    "@elizaos/plugin-twitter",
    "@elizaos/plugin-sui"
  ],
  "settings": {
    "language": "en",
    "timezone": "UTC",
    "maxTweetsPerAccount": 100,
    "updateInterval": 300,
    "supportedLanguages": ["en", "ru", "zh"]
  },
  "personality": {
    "tone": "professional",
    "style": "informative",
    "traits": [
      "knowledgeable",
      "helpful",
      "engaging",
      "multilingual"
    ]
  },
  "capabilities": {
    "monitoring": {
      "suiEcosystem": true,
      "communityEngagement": true,
      "contentGeneration": true,
      "giveaways": true
    },
    "languages": ["en", "ru", "zh"]
  },
  "networks": {
    "sui": {
      "rpcUrl": "https://fullnode.mainnet.sui.io:443",
      "network": "mainnet"
    }
  }
} 